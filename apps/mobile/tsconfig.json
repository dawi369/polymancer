{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsxImportSource": "nativewind",
    "paths": {
      "@/*": [
        "./src/*",
        "./*"
      ],
      "@/assets/*": [
        "./assets/*"
      ],
      "@polymancer/*": [
        "../../packages/*/src"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
